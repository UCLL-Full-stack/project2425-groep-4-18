generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int     @id @default(autoincrement())
  role      String? 
  name      String  
  firstName String  
  password  String  
  chats     Chat[]  @relation("UserChats")
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String   
  createdAt DateTime @default(now())
  userId    Int?     
  user      User?    @relation("UserChats", fields: [userId], references: [id])
}
